generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// *
///  * =======================
///  * Categories
///  * =======================
model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  posts Post[]
}

/// *
///  * =======================
///  * Posts
///  * =======================
model Post {
  post_id     Int       @id @default(autoincrement())
  img_post    String?
  title       String
  description String
  category_id Int?
  createdAt   DateTime  @default(now())
  authorId    Int
  updatedAt   DateTime  @updatedAt
  imgPostKey  String?
  author      User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  category    Category? @relation(fields: [category_id], references: [id])
}

model Notification {
  id        Int       @id @default(autoincrement())
  userId    Int
  type      String
  text      String
  href      String?
  createdAt DateTime  @default(now())
  readAt    DateTime?
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model User {
  id                Int                @id @default(autoincrement())
  username          String             @unique
  email             String             @unique
  passwordHash      String
  avatarUrl         String?
  role              Role               @default(USER)
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  avatarKey         String?
  banReason         String?
  bannedAt          DateTime?
  isBanned          Boolean            @default(false)
  following         Follow[]           @relation("Following")
  followers         Follow[]           @relation("Followers")
  moderationAsAdmin ModerationAction[] @relation("ModerationAdmin")
  moderationAsUser  ModerationAction[] @relation("ModerationUser")
  notifications     Notification[]
  posts             Post[]
}

model Follow {
  id          Int      @id @default(autoincrement())
  followerId  Int
  followingId Int
  createdAt   DateTime @default(now())
  follower    User     @relation("Following", fields: [followerId], references: [id], onDelete: Cascade)
  following   User     @relation("Followers", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
}

model ModerationAction {
  id        Int            @id @default(autoincrement())
  adminId   Int
  userId    Int
  type      ModerationType
  reason    String?
  createdAt DateTime       @default(now())
  admin     User           @relation("ModerationAdmin", fields: [adminId], references: [id], onDelete: Cascade)
  user      User           @relation("ModerationUser", fields: [userId], references: [id], onDelete: Cascade)
}

enum Role {
  USER
  ADMIN
}

enum ModerationType {
  WARN
  BAN
  UNBAN
  DELETE_POST
}
